<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error">
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
<br />
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
<br />
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
<br />
  <div class="actions"><%= f.submit %></div>
<% end %>
